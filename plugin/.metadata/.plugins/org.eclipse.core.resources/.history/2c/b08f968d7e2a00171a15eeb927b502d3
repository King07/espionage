package edu.cwi.espionage.views;

import java.util.Map;

import org.eclipse.jface.viewers.LabelProvider;

import edu.cwi.espionage.model.ProcessCase;
import edu.cwi.espionage.util.DateManipulator;

public class ProcessCasesLabelProvider extends LabelProvider {
	
	@Override
	public String getText(Object element) {
		if (element instanceof Map) {
			return "Time Spent";
		} else if (element instanceof Map.Entry) {
			return ((Map.Entry) element).getKey().toString();
		} else if (element instanceof ProcessCase) {
			return DateManipulator.getFormatedDiff(((ProcessCase) element).getTotalTime());
		} else {
			return "Unknown type: " + element.getClass();
		}
	}

}
